#######################################################################
# rate-limiting settings
#######################################################################
limit_req_zone $binary_remote_addr zone=zabbix_app:10m rate=10r/s;
limit_req_zone $binary_remote_addr zone=zabbix_static:10m rate=50r/s;


#######################################################################
# upstream
#######################################################################
upstream zabbix_app {
    server 127.0.0.1:8001 fail_timeout=0;
}


#######################################################################
# non-ssl redirector / letsencrypt handling
#######################################################################
server {
    server_name  {{ zabbix_hostname }};
    listen       80 default_server;

    location ~ /.well-known {
        root /var/www/html/;
    }

    location / {
        rewrite ^ https://{{ zabbix_hostname }}$request_uri? permanent;
    }
}


#######################################################################
# server / proxy
#######################################################################
server {
    server_name  {{ zabbix_hostname }};
    listen       443 default_server ssl;

    # Certificate(s) and private key
    ssl_certificate      '/etc/letsencrypt/live/{{ zabbix_hostname }}/fullchain.pem';
    ssl_certificate_key  '/etc/letsencrypt/live/{{ zabbix_hostname }}/privkey.pem';

    # log
    access_log /var/log/nginx/{{ zabbix_hostname }}-access.log;
    error_log /var/log/nginx/{{ zabbix_hostname }}-error.log;

    #
    large_client_header_buffers 4 32k;

    # serve static files directly from nginx
    location ~* \.(js|css|png|jpg|jpeg|gif|ico)$ {

        # rate limiting
        limit_req zone=zabbix_static burst=100 nodelay;

        root /usr/share/zabbix;
    }

    # app proxy
    location / {

        # proxy settings
        proxy_set_header   Host $http_host;
        proxy_set_header   X-Real-IP $remote_addr;
        proxy_set_header   X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header   X-Forwarded-Proto $scheme;

        client_max_body_size 32M;
        client_body_buffer_size    128k;

        proxy_connect_timeout      90;
        proxy_send_timeout         90;
        proxy_read_timeout         90;

        proxy_buffer_size          4k;
        proxy_buffers              4 32k;
        proxy_busy_buffers_size    64k;
        proxy_temp_file_write_size 64k;

        # rate limiting
        limit_req zone=zabbix_app burst=20 nodelay;

        # app backend
        proxy_pass http://zabbix_app;

    }
}
